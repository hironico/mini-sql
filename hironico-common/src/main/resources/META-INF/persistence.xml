<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="TAP" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Add class below if you wish to DISABLE auto discovery -->
        <!--
        <class>ch.ubp.pms.entities.tapdta.BlkEvent</class>
        <class>ch.ubp.pms.entities.tapdta.BlkPositionFamily</class>
        <class>ch.ubp.pms.entities.tapdta.BlkPositionMax</class>
        <class>ch.ubp.pms.entities.aaamaindb.SubscriptionEvent</class>

        <class>ch.ubp.pms.entities.aaamaindb.SubscriptionEventStatusConverter</class>
        <class>ch.ubp.pms.entities.aaamaindb.ExtOperation</class>
        -->

        <!-- Enables auto discovery of persistent classes, -->
        <!-- otherwise they must be listed using <class>   -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.level.sql" value="CONFIG"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>